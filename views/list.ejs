<%- include('header') %>
<body>
  <div class="box" id="heading">

    <h1 style="color: black;"> <%= listTitle %> </h1>

  </div>

 <div class="box">

  <% newListItems.forEach(item => {%>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkboxId" value="<%=item._id%>" onChange="this.form.submit()">
        <input type="hidden" name="listName" value="<%= listTitle %>">
        <p><%=  item.Name %></p>
      </div>
    </form>
<% }); %>

  <form action="/" method="post" class="item">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off"></input>
    <button name="list" type="list" value= <%= listTitle %> >+</button>
  </form>

</div>
<%- include('footer'); -%>
